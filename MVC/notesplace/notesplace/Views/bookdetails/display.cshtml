@model IEnumerable<notesplace.Models.bookdetails>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Note Detail Section -->

@foreach (var book in ViewBag.data)
{

<div class="container">

    <div class="row">

        <div class="col-md-12 note-detail-heading margintop">

            Notes Details

        </div>

        <div class="col-xl-3 col-md-6 paddingbottom-20">


            <img src="@Url.Content(@book.bookimage)" class="img-responsive image-size" alt="bookimage">

        </div>

        <div class="col-xl-4 col-md-6 paddingbottom-20">

            <div class="book-name">@book.title</div>
            <div class="book-type">@book.booktype</div>
            <div class="book-description">@book.description</div>
            <button class="btn download-btn" data-toggle="modal" data-target="#exampleModal">Download/@book.sellprice</button>

        </div>

        <div class="col-xl-5 col-md-12 paddingbottom-20">

            <div>

                <span class="q-type">Institution:</span>
                <span class="answer">@book.institutename</span>

            </div>


            <div>

                <span class="q-type">Country:</span>
                <span class="answer">@book.country</span>

            </div>

            <div>

                <span class="q-type">Course Name:</span>
                <span class="answer">@book.coursename</span>

            </div>

            <div>

                <span class="q-type">Course Code:</span>
                <span class="answer">@book.coursecode</span>

            </div>

            <div>

                <span class="q-type">Professor:</span>
                <span class="answer">@book.professor</span>

            </div>

            <div>

                <span class="q-type">No Of Pages:</span>
                <span class="answer">@book.numberofpages</span>

            </div>

            <div>

                <span class="q-type">Approved Date:</span>
                <span class="answer">November 25 2020</span>

            </div>

            <div>

                <span class="q-type">Rating</span>
                <span class="star-float">
                    <i class="fa fa-star checked f-size"></i>
                    <i class="fa fa-star checked f-size"></i>
                    <i class="fa fa-star checked f-size"></i>
                    <i class="fa fa-star-o f-size"></i>
                    <i class="fa fa-star-o f-size"></i>
                    <span class="answer-review">100 Reviews</span>
                </span>

            </div>

            <div class="inappropriate-message">
                5 users marked this note as inappropriate.
            </div>

        </div>

        <div class="col-xl-12">
            <div class="separate-line"></div>
        </div>

    </div>
    @book.bookpreview

    <div class="row">

        <div class="col-xl-6 note-detail-heading">

            Notes preview

            <div class="ptop">

                <div class="iframe-pdf">

                    <iframe src="@Url.Content(@book.bookpreview)" width="600px" height="450px"></iframe>
                </div>

            </div>

        </div>


        <div class="col-xl-6 note-detail-heading">

            Customer Reviews

            <div class="ptop">

                <div class="customer-box">

                    <div class="container">

                        <div class="row customer-padding">

                            <img src="images/customers/user-1.jpg" class="customer-image">
                            <span class="customer-name">
                                Richard Brown<br>
                                <i class="fa fa-star checked"></i>
                                <i class="fa fa-star checked"></i>
                                <i class="fa fa-star checked"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </span>

                            <div>
                                <p class="customer-review-desc">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Incidunt accusamus quas nulla similique.</p>
                            </div>

                        </div>

                        <div class="container">
                            <div class="row customer-review-line">
                            </div>
                        </div>

                    </div>


                    <div class="container">

                        <div class="row customer-padding">

                            <img src="images/customers/user-1.jpg" class="customer-image">
                            <span class="customer-name">
                                Richard Brown<br>
                                <i class="fa fa-star checked"></i>
                                <i class="fa fa-star checked"></i>
                                <i class="fa fa-star checked"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </span>

                            <div>
                                <p class="customer-review-desc">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Incidunt accusamus quas nulla similique.</p>
                            </div>

                        </div>

                        <div class="container">
                            <div class="row customer-review-line">
                            </div>
                        </div>

                    </div>



                    <div class="container">

                        <div class="row customer-padding">

                            <img src="images/customers/user-1.jpg" class="customer-image">
                            <span class="customer-name">
                                Richard Brown<br>
                                <i class="fa fa-star checked"></i>
                                <i class="fa fa-star checked"></i>
                                <i class="fa fa-star checked"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </span>

                            <div>
                                <p class="customer-review-desc">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Incidunt accusamus quas nulla similique.</p>
                            </div>

                        </div>


                    </div>


                </div>

            </div>

        </div>


    </div>

</div>
}

<!-- popup -->
