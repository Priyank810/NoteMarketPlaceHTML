@model notesplace.Models.changepassword
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>


    <!-- Important Meta Tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Title -->
    <title>Notes-MarketPlace</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/Front/css/font-awesome/css/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/bootstrap/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/changepassword.css">


</head>
<body>

    <div class="bg-image-main" id="changepassword-page">

        <div class="inner-box">

            <div id="logo" class="col-12" align="center">

                <img src="images/logo/top-logo.png" class="img-responsive">

            </div>

            <div class="child-container">

                <div class="main-header">

                    <h3>Change Password</h3>

                </div>

                <div class="main-description">

                    <p>Enter your new password to change your password</p>

                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-box">

                        <div class="form-group">

                            <label for="oldpassword" class="form-label">Old Password</label>
                            @Html.EditorFor(model => model.oldpassword, new { htmlAttributes = new { @class = "form-control form-box-content pass", @placeholder = "Password", @id = "oldpassword" } })
                            <span class="show-hide-eye fa fa-fw fa-eye field-icon toggle-password" toggle="#oldpassword"></span>
                            @Html.ValidationMessageFor(model => model.oldpassword, "", new { @class = "text-danger" })

                        </div>


                        <div class="form-group">

                            <label for="newpassword" class="form-label">New Password</label>
                            @Html.EditorFor(model => model.newpassword, new { htmlAttributes = new { @class = "form-control form-box-content pass", @placeholder = "Password", @id = "newpassword" } })
                            <span class="show-hide-eye fa fa-fw fa-eye field-icon toggle-password" toggle="#newpassword"></span>
                            @Html.ValidationMessageFor(model => model.newpassword, "", new { @class = "text-danger" })

                        </div>


                        <div class="form-group">

                            <label for="confirmpassword" class="form-label">Confirm Password</label>
                            @Html.EditorFor(model => model.confirmnewpassword, new { htmlAttributes = new { @class = "form-control form-box-content pass", @placeholder = "Password", @id = "confirmnewpassword" } })
                            <span class="show-hide-eye fa fa-fw fa-eye field-icon toggle-password" toggle="#confirmnewpassword"></span>
                            @Html.ValidationMessageFor(model => model.confirmnewpassword, "", new { @class = "text-danger" })

                        </div>

                        <div class="credential-btn-padding btn-padding-bottom">

                            <button type="submit" class="btn credential-btn-style">Submit</button>

                        </div>

                    </div>
                }

            </div>

        </div>
    </div>

    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/Front/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/Front/js/script.js"></script>
</body>
</html>
