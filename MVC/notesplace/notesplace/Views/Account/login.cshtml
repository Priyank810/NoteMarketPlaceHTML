@model notesplace.Models.login

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Important Meta Tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Title -->
    <title>Notes-MarketPlace</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/Front/css/font-awesome/css/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/bootstrap/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/login.css">

</head>

<body>

    <div class="bg-image-main" id="login-page">

        <div class="inner-box">

            <!-- Logo -->

            <div id="logo" class="col-12" align="center">

                <img src="~/Content/Front/images/logo/top-logo.png" class="img-responsive">

            </div>

            <!-- White Box Login -->

            <div class="child-container">

                <div class="main-header">

                    Login

                </div>

                <div class="main-description padding-description">

                    <p style="font-size:20px";>Enter email address and password to login</p>

                </div>

                

                @using (Html.BeginForm("login","account",FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <!-- Login Form -->
                    <div class="form-box">

                        <div class="form-group paddingbottom-30">

                            <label for="inputEmail" class="form-label">Email</label>

                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control form-box-content non-pass", @id = "inputEmail", @placeholder = "Enter Email" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group paddingbottom-30">

                            <label for="inputPassword" class="form-label">Password</label>
                            <a href="@Url.Action("forgotpassword","Account")" class="forgot-password">Forgot Password?</a>

                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control form-box-content pass", @id = "inputPassword", @placeholder = "Enter Password" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            <span class="show-hide-eye fa fa-fw fa-eye field-icon toggle-password" toggle="#inputPassword"></span>

                        </div>

                        <div class="form-group form-check margintop-20">

                            @Html.CheckBoxFor(model => model.rememberme, new { @class = "form-check-input remember-me-checkbox", @type = "checkbox" })
                            <label class="form-check-label remember-me-tag" for="exampleCheck1">Remember me</label>


                        </div>

                        <div class="credential-btn-padding">

                            <button type="submit" class="btn credential-btn-style">Login</button>

                        </div>

                        <div class="end-description-outer">

                            <p class="end-description-content">Don't have an account?<a href="@Url.Action("signup","Account")"> SignUp</a></p>

                        </div>

                    </div>
                }

            </div>

        </div>

    </div>


    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/Front/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/Front/js/script.js"></script>

</body>

</html>

