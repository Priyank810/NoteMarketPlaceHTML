<!DOCTYPE html>
<html lang="en">

@{ notesmarketplaceEntities context = new notesmarketplaceEntities();
    var image = context.systemconfig.FirstOrDefault().defaultprofilepicture;
}
<head>

    <!-- Important Meta Tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Title -->
    <title>Notes-MarketPlace</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/Admin/css/font-awesome/css/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/Admin/css/bootstrap/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/Admin/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/Admin/css/responsive.css">


</head>

<body>



    <!-- NavBar -->
    <header>


        <nav class="navbar navbar-expand-lg white-nav-top fixed-top">

            <div class="container top-navbar-container">
                <a href="#" class="navbar-brand nav-image img-responsive"><img src="~/Content/Admin/images/logo/logo.png" class="img-fluid"></a>

                <button type="button" class="navbar-toggler navbar-brand" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"><i class="fa fa-bars toggle-bar-style"></i></span>
                </button>



                <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "dashboard" ? "activelink nav-items nav-link" : "nav-items nav-link")" href="@Url.Action("dashboard", "admin")"><span>Dashboard</span></a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="nav-items1 nav-link" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Notes
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="@Url.Action("notesunderreview", "notes")">Notes Under Review</a>
                                    <a class="dropdown-item" href="@Url.Action("publishednotes", "notes")">Published Notes</a>
                                    <a class="dropdown-item" href="@Url.Action("downloadednotes", "notes")">Download Notes</a>
                                    <a class="dropdown-item" href="@Url.Action("rejectednotes", "notes")">Rejected Notes</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "member" ? "activelink nav-items nav-link" : "nav-items nav-link")" href="@Url.Action("member", "member")"><span>Members</span></a>
                        </li>

                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="nav-items1 nav-link" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Reports
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="@Url.Action("spamreports", "spamreports")">Spam Reports</a>
                                </div>
                            </div>
                        </li>

                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="nav-items1 nav-link" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Settings
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    @if (ViewBag.role == 1)
                                    {
                                        <a class="dropdown-item" href="@Url.Action("systemconfig", "systemconfig")">Manage System Config</a>
                                        <a class="dropdown-item" href="@Url.Action("administrator", "manage")">Manage Administrator</a>
                                    }
                                    <a class="dropdown-item" href="@Url.Action("country", "manage")">Manage Country</a>
                                    <a class="dropdown-item" href="@Url.Action("type", "manage")">Manage Type</a>
                                    <a class="dropdown-item" href="@Url.Action("category", "manage")">Manage Category</a>
                                </div>
                            </div>
                        </li>

                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="profile-btn-style  nav-link" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @if (ViewBag.profilepicture != null)
                                    {
                                        <img src="@Url.Content(ViewBag.profilepicture)" class="nav-user-image">
                                    }
                                    else
                                    {
                                        <img src="@Url.Content(image)" class="nav-user-image">
                                    }
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="@Url.Action("updateprofile", "admin")">Update Profile</a>
                                    <a class="dropdown-item" href="@Url.Action("changepassword", "account")">Change Password</a>
                                    <a class="dropdown-item" href="@Url.Action("logout", "account")">Logout</a>
                                </div>
                            </div>
                        </li>

                        <li class="nav-item">
                            <button type="submit" class="btn log-btn nav-link" onclick="location.href='@Url.Action("logout", "account")'">Logout</button>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div>
        @RenderBody()
    </div>
    <!-- Footer Section -->
    <div class="container-fluid margintopfooter-20">

        <div class="row footer-box">

            <div class="col-md-4 col-sm-12 col-12">
                <div>Version: 1.1.24</div>
            </div>

            <div class="col-md-8 col-sm-12 col-12">
                <div class="copyright">Copyright &#169; Tatvasoft All rights reserved.</div>
            </div>

        </div>
    </div>


    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/Admin/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/Admin/js/script.js"></script>

</body>

</html>